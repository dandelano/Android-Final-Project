<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digitalsolutions.finalproject" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="landscape"
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".MovieListActivity"
            android:label="@string/title_movie_list" >
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".MovieDetailActivity"
            android:label="@string/title_movie_detail"
            android:parentActivityName=".MovieListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.digitalsolutions.finalproject.MovieListActivity" />
        </activity>
        <provider
            android:name="com.digitalsolutions.finalproject.database.MovieProvider"
            android:authorities="com.digitalsolutions.finalproject.provider"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>
